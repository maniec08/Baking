<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:weightSum="1.0">

    <TextView
        android:id="@+id/previous_step_button"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/button_widget"
        android:padding="1dp"
        android:text="@string/previous_step"
        android:layout_weight=".5"
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/next_step_button"
        android:layout_width="0dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_height="match_parent"
        android:background="@drawable/button_widget"
        android:padding="1dp"
        android:text="@string/next_step"
        android:layout_weight=".5"
        android:textAlignment="center"
        android:gravity="center_vertical"/>
    </LinearLayout>


    <TextView
        android:layout_below="@+id/test"
        android:id="@+id/widget_tv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/details_widget"
        android:text="match_parent"
        android:textAlignment="center"
        android:gravity="center_vertical"/>

    <ListView
        android:layout_below="@+id/widget_tv"
        android:id="@+id/widget_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>